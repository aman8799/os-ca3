#include<iostream>
using namespace std;
int main()
{
	int a,i,j,avg_waiting_time = 0;
	float avg_turnaround_time = 0,temp;
	int proc[20],burst_time[20],wait[20];
	cout<<"\n No. of processes to be scheduled : \n";
	cin>>a;
	cout<<"Enter the burst time \n";
	for(i=0;i<a;i++)
	{
		cout<<"Burst time for P"<<i+1<<":";
		cin>>burst_time[i];
		proc[i] = i;
		cout<<"\n";
	}
	
}
